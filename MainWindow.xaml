<Window x:Class="WPF_PR_13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_PR_13"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="293*"/>
            <RowDefinition Height="36*"/>
        </Grid.RowDefinitions>
        <Label Content=" " Grid.Row="0" Grid.Column="0" Background="#FF0AF4FF"/>
        <Label Content=" " Grid.Row="2" Background="#FF0AF4FF"/>
        <Label Content="Склад" Grid.Row="0" Grid.Column="0" Background="{x:Null}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Style= "{StaticResource Label}" FontSize="36"/>
        <StackPanel Orientation="Horizontal">
            <Image Source="Image/icon.png" Width="50"/>
            <TextBlock Text="{Binding ElementName=FrmMain, Path=Content.Title}" Style= "{StaticResource Title}" />
        </StackPanel>

    </Grid>
</Window>
